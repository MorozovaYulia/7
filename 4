#include <iostream> 
#include <string> 
using namespace std; 
int main() 
{ 
  int A; 
  cout « "Enter the number \n"; 
  cin >> A; 
  int b = A / 100; 
  int c = (A - b*100) / 10; 
  int d = A % 10; 
  if (b < c < d) 
    cout << "The numbers of this number form an increasing sequence" ; 
  else 
    if (b > c > d) 
      cout << "The numbers of this number form a decreasing sequence"; 
    else 
      cout << "The numbers of this number do not form a sequence"; 
}
